<%= turbo_frame_tag dom_id(business, context) do %>
  <div class="business-row">
    <div class="business-col name">
      <h3><%= business.name %></h3>
    </div>

    <div class="business-col">
      <span class="label">Location</span>
      <span><%= business.location %></span>
    </div>

    <div class="business-col">
      <span class="label">Services</span>
      <span><%= business.services %></span>
    </div>

    <div class="business-col link">
      <a href="<%= business.website %>" target="_blank">Website ↗</a>
    </div>

    <% if show_saved && user_signed_in? %>
    <div class="business-col actions">
        <% if business.saved_by?(current_user) %>
          <%= button_to "★ Saved",
                business_saved_path(business),
                method: :delete,
                form: { data: { turbo_frame: dom_id(business, context) } },
                class: "saved-btn active" %>
        <% else %>
          <%= button_to "☆ Save",
                business_saved_path(business),
                method: :post,
                form: { data: { turbo_frame: dom_id(business, context) } },
                class: "saved-btn" %>
        <% end %>        
    </div>
    <% end %>
  </div>
<% end %>